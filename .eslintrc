{
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "jest": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["react"],
  "extends": ["standard", "plugin:react/recommended"],
  "rules":{
    "react/display-name": "off",
    "react/prop-types": "off",
    "react/react-in-jsx-scope": "off",
    "max-len": ["error", 120],
    "no-var": "error",
    "prefer-const": "error",
    "curly": ["error", "all"]
  }
}
